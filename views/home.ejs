<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Blog List</title>
    <%- include("./partials/head") %>
  </head>
  <body class="bg-light">
    <%- include("./partials/nav") %>
    <div class="container my-5">
      <h2 class="text-center mb-5 fw-bold text-primary">Blog List</h2>

      <div class="row g-4 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <img
              src="<%= blog.coverImage %>"
              class="card-img-top"
              alt="<%= blog.title %>"
              style="height: 200px; object-fit: cover;"
            />
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-truncate"><%= blog.title %></h5>
              <p class="card-text text-muted text-truncate">
                <%= blog.body %>
              </p>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">
                View
              </a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <%- include("./partials/script") %>
  </body>
</html>
